<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<!-- Cadena de conexión lista para futura BD (ejemplo SQL Server LocalDB). 
       Puedes cambiar "Data Source" a tu SQL Server o a SQLite según convenga. -->
	<connectionStrings>
		<add name="TurnoVitalPlusDb"
			 connectionString="Data Source=(localdb)\MSSQLLocalDB;Initial Catalog=TurnoVitalPlus;Integrated Security=True;Encrypt=False" />
	</connectionStrings>
	<appSettings>
		<!-- URLs de ayuda/soporte/guía. Modifícalas cuando tengas tus páginas. -->
		<add key="UrlGuia" value="https://tu-dominio.com/guia" />
		<add key="UrlSoporte" value="https://tu-dominio.com/soporte" />
		<add key="UrlAyuda" value="https://tu-dominio.com/ayuda" />
	</appSettings>
</configuration>
